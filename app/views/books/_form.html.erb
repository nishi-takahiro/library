<div class = "container">
    
  <div class = "row">
     <div class = "col-sm-12 col-mg-12 col-lg-12 px-sm-0">
       <%= form_with model: book do |form| %>
       
       <% if book.errors.any? %>
       <%= book.errors.count %>prohibited this book from being saved
         <ul>
             <% book.errors.full_messages.each do |massage| %>
             <lil><%= massage %></lil>
             <% end %>
         </ul>
         <% end %>
    </div>
  </div>
    
  <div class = "row">
     <div class = "col-sm-12 col-mg-12 col-lg-12 px-sm-0">
       
         <div class = "row">
             <div class = "field">
                 <div class = "col-sm-6 col-mg-4 col-lg-2 px-sm-0">
                     <%= form.label :title %> 
                 </div>
                 <div class = "col-sm-4 col-mg-5 col-lg-6 px-sm-0">
                     <%= form.text_field :title %>
                  </div> 
             </div>
         </div>
         
          <div class = "row">
             <div class = "field">
                 <div class = "col-sm-6 col-mg-4 col-lg-2 px-sm-0">
                    <%= form.label :description %>
                 </div>
                 <div class = "col-sm-4 col-mg-5 col-lg-6 px-sm-0">
                    <%= form.text_field :description %>
                  </div> 
             </div>
         </div>
     </div>
  </div>
   <div class = "row mt-3">
     <div class = "col-sm-12 col-mg-12 col-lg-12 px-sm-0">
       <%= form.submit %>
    </div>
  </div>
  
  
  <% end %>
</div>
