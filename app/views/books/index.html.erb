<div class = "container">
  
  <p id = "notice"><%= notice%></p>
  <div class = "row m-4"><h1>Books</h1></div>

  <div class = "row">
    <div class = "col-sm-12 col-mg-12 col-lg-12 px-sm-0">
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.descripton %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？"  %></td>
          </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
  <div class = "row">
    <% link_to 'New Book',new_book_path %>
  </div>
 
</div>

